{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Specific File",
            "type": "go",
            "request": "launch",
            "program": "${file}",
            "env": {},
            "args": [],
            "showLog": true,
            "mode": "debug"
        },
        {
            "name": "Launch kubectl",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/kubectl/main.go",
            "args": ["get", "pod", "mongodb-deployment-hoyte"],
            "env": {},
            "preLaunchTask": "build kubectl",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug API Server",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/apiserver/main.go",
            "args": []
        },
        {
            "name": "Debug Worker",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/worker/main.go",
            "args": []
        }
    ]
}
